<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/re_head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/login_background_white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:gravity="center"
                android:text="@string/register_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18" />


            <RelativeLayout
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/re_head"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/bg_edit_border_invisible"
                    android:hint="@string/register_name_hint"
                    android:inputType="text"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingBottom="6.0dip"
                    android:paddingEnd="0dip"
                    android:paddingLeft="50.0dip"
                    android:paddingRight="0dip"
                    android:paddingStart="50.0dip"
                    android:paddingTop="6.0dip"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15.0dip"
                    android:paddingEnd="0dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="0dip"
                    android:paddingStart="10.0dip"
                    android:src="@mipmap/login_account" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black_gray" />

            <RelativeLayout
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/bg_edit_border_invisible"
                    android:hint="@string/register_pwd_hint"
                    android:inputType="number"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingBottom="6.0dip"
                    android:paddingEnd="0dip"
                    android:paddingLeft="50.0dip"
                    android:paddingRight="0dip"
                    android:paddingStart="50.0dip"
                    android:paddingTop="6.0dip"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15.0dip"
                    android:paddingEnd="0dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="0dip"
                    android:paddingStart="10.0dip"
                    android:src="@mipmap/login_password"
                    android:tint="@color/black_gray" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black_gray" />

            <RelativeLayout
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip">

                <EditText
                    android:id="@+id/et_password_confirm"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/bg_edit_border_invisible"
                    android:hint="@string/register_pwd_confirm_hint"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingBottom="6.0dip"
                    android:paddingEnd="0dip"
                    android:paddingLeft="50.0dip"
                    android:paddingRight="0dip"
                    android:paddingStart="50.0dip"
                    android:paddingTop="6.0dip"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15.0dip"
                    android:paddingEnd="0dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="0dip"
                    android:paddingStart="10.0dip"
                    android:src="@mipmap/login_password" />

                <ImageView
                    android:id="@+id/iv_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/eye_invisible" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black_gray" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dip"
                android:background="@mipmap/button_circle"
                android:backgroundTint="@color/decorate_blue"
                android:text="@string/register_register"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_head"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/transparent">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:clickable="true"
            android:padding="@dimen/padding_5">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="@dimen/image_width_20"
                android:layout_height="@dimen/image_height_20"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:src="@mipmap/login_back" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>